<?xml version="1.0" encoding="utf-8" ?>
<JWM>
  <RootMenu>
    <Program icon="utilities-terminal.svg" label="Terminal">mlterm</Program>
    <Program icon="firefox.svg" label="Web Browser">firefox</Program>
    <Program icon="folder-brown.svg" label="Files">caja</Program>
    <Program icon="deadbeef.svg" label="Music Player">deadbeef</Program>
    <Separator />
    <Restart label="Reconfigure" icon="preferences-other.svg" />
    <Exit label="Logout" icon="system-log-out.svg"/>
  </RootMenu>

  <Group>
    <Option>tiled</Option>
    <Option>aerosnap</Option>
  </Group>

  <Group>
    <Class>mlterm</Class>
    <Option>iignore</Option>
  </Group>

  <Group>
    <Class>Polybar</Class>
    <Option>nolist</Option>
    <Option>sticky</Option>
    <Option>layer:below</Option>
  </Group>

  <Tray x="0" y="0" autohide="off" height="48" width="2625" layer="above">
    <TrayButton label="『 』">showdesktop</TrayButton>
    <Pager labeled="true"/>
    <TaskList maxwidth="256"/>
  </Tray>

  <WindowStyle>
    <Font>Sans-10</Font>
    <Width>6</Width>
    <Height>40</Height>
    <Corner>3</Corner>
    <Foreground>#F9F9F9</Foreground>
    <Background>#666666</Background>
    <Outline>#000000</Outline>
    <Opacity>1.0</Opacity>
    <Active>
      <Foreground>#FFFFFF</Foreground>
      <Background>#0099CC</Background>
      <Outline>#000000</Outline>
      <Opacity>1.0</Opacity>
    </Active>
  </WindowStyle>

  <TrayStyle group="true" list="all">
    <Font>Sans-9</Font>
    <Background>#333333</Background>
    <Foreground>#F9F9F9</Foreground>
    <Outline>#333333</Outline>
    <Opacity>0.50</Opacity>
  </TrayStyle>

  <TaskListStyle>
    <Font>Sans-9</Font>
    <Active>
      <Foreground>#000000</Foreground>
      <Background>#CCFF00</Background>
    </Active>
    <Foreground>#F9F9F9</Foreground>
    <Background>#333333</Background>
  </TaskListStyle>

  <PagerStyle>
    <Outline>#333333</Outline>
    <Foreground>#F9F9F9</Foreground>
    <Background>#333333</Background>
    <Text>#FFFFFF</Text>
    <Active>
      <Foreground>#00CCFF</Foreground>
      <Background>#000000</Background>
    </Active>
  </PagerStyle>

  <MenuStyle>
    <Font>Sans-9</Font>
    <Foreground>#333333</Foreground>
    <Background>#F9F9F9</Background>
    <Outline>#000000</Outline>
    <Active>
      <Foreground>#000000</Foreground>
      <Background>#00CCFF</Background>
    </Active>
    <Opacity>1.0</Opacity>
  </MenuStyle>
  
  <PopupStyle>
    <Font>Sans-9</Font>
    <Foreground>#000000</Foreground>
    <Background>#FFCC33</Background>
  </PopupStyle>

  <IconPath>/run/current-system/sw/share/icons/Newaita/actions/22</IconPath>
  <IconPath>/run/current-system/sw/share/icons/Newaita/apps/22</IconPath>
  <IconPath>/run/current-system/sw/share/icons/Newaita/categories/22</IconPath>
  <IconPath>/run/current-system/sw/share/icons/Newaita/devices/22</IconPath>
  <IconPath>/run/current-system/sw/share/icons/Newaita/emblems/22</IconPath>
  <IconPath>/run/current-system/sw/share/icons/Newaita/mimetypes/22</IconPath>
  <IconPath>/run/current-system/sw/share/icons/Newaita/panel/22</IconPath>
  <IconPath>/run/current-system/sw/share/icons/Newaita/places/22</IconPath>
  <IconPath>/run/current-system/sw/share/icons/Newaita/status/22</IconPath>

  <Desktops width="4" height="1">
    <Background type="image">/home/nyarla/Pictures/wallpapaer.png</Background>
  </Desktops>

  <DoubleClickSpeed>400</DoubleClickSpeed>
  <DoubleClickDelta>2</DoubleClickDelta>
  <FocusModel>click</FocusModel>
  <SnapMode distance="10">border</SnapMode>
  <MoveMode>opaque</MoveMode>
  <StartupCommand>sh /home/nyarla/local/dotfiles/jwm/autostart.sh</StartupCommand>

  <ResizeMode>opaque</ResizeMode>

  <Key key="Up">up</Key>
  <Key key="Down">down</Key>
  <Key key="Right">right</Key>
  <Key key="Left">left</Key>
  <Key key="h">left</Key>
  <Key key="j">down</Key>
  <Key key="k">up</Key>
  <Key key="l">right</Key>
  <Key key="Return">select</Key>
  <Key key="Escape">escape</Key>

  <Key mask="4C" key="Left">maxleft</Key>
  <Key mask="4C" key="Right">maxright</Key>
  <Key mask="4C" key="Up">maximize</Key>
  <Key mask="4C" key="Down">restore</Key>

  <Key mask="4A" key="Left">sendl</Key>
  <Key mask="4A" key="Right">sendr</Key>
</JWM>
